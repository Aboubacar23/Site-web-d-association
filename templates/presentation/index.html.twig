{% extends 'base_admin.html.twig' %}

{% block title %}Presentation index{% endblock %}

{% block body %}
    <h1 class="text-success center">Presentation</h1>

    <table class="table table-bordered table-hover table-primary">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
               
            </tr>
        </thead>
        <tbody>
        {% for presentation in presentations %}
            <tr>
                <td>{{ presentation.id }}</td>
                <td>{{ presentation.Libelle }}</td>
                <td>
                    <a href="{{ path('presentation_show', {'id': presentation.id}) }}" class="btn btn-info"><span class="glyphicon glyphicon-eye-open"></span></a></td>
                <td> <a href="{{ path('presentation_edit', {'id': presentation.id}) }}" class="btn btn-primary"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">la table est vide</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('presentation_new') }}" class="btn btn-success">Ajouter un nouveau</a>
{% endblock %}

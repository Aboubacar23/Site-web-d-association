{% extends 'base_admin.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <h1>Contact</h1>

    <table class="table table-responsive">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ contact.Nom }}</td>
            </tr>
            <tr>
                <th>Objet</th>
                <td>{{ contact.Objet }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contact.Email }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ contact.Message }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('contact_index') }}"><span class="btn btn-info">Retour</span></a>
        <br>
        <br>
    {{ include('contact/_delete_form.html.twig') }}
{% endblock %}

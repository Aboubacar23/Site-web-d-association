{% extends 'base_admin.html.twig' %}

{% block title %}Historique index{% endblock %}

{% block body %}
    <h1 class="text-success center">Historiques</h1>

    <table class="table table-bordered table-hover table-primary">
        <thead>
            <tr>
                <th>Id</th> 
                <th>Libelle</th>
                
            </tr>
        </thead>
        <tbody>
        {% for historique in historiques %}
            <tr>
                <td>{{ historique.id }}</td>
                <td>{{ historique.Libelle }}</td>
                <td>
                    <a href="{{ path('historique_show', {'id': historique.id}) }}" class="btn btn-info"><span class="glyphicon glyphicon-eye-open"></span></a></td>
                   <td> <a href="{{ path('historique_edit', {'id': historique.id}) }}" class="btn btn-primary"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">la table est vide</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('historique_new') }}" class="btn btn-success">Ajouter un nouveau</a>
{% endblock %}

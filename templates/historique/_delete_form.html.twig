<form method="post" action="{{ path('historique_delete', {'id': historique.id}) }}" 
onsubmit="return confirm('Êtes-vous sûr de bien vouloir supprimer cet élément?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ historique.id) }}">
    <button class="btn btn-danger fa fa-trash-o fa-lg">Delete</button>
</form>
 
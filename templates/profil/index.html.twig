{% extends 'base_admin.html.twig' %}

{% block title %}profil{% endblock %}

{% block body %}
    <h1>Administrateur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ profil.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ profil.prenom }}</td>
            </tr>
             <tr>
                <th>Email</th>
                <td>{{ profil.email }}</td>
            </tr>
             <tr>
                <th>Password</th>
                <td>{{ profil.password }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td><img src="{{asset('photo_admin/' ~ profil.Photo)}}" width="100px" height="100px;"></td>
            </tr>
        </tbody>
    </table>
    <br>
    <br>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <a href="{{path('administrateur')}}" class="btn btn-success">Retour</a>
            </div>
        </div>
    </div>
{% endblock %}

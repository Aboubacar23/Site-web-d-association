{% extends 'base_admin.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Inscription Membre</h1>

    {{ form_start(registrationForm) }}
        <div class="row">
            <div class="col-md-3">{{ form_row(registrationForm.Nom) }}</div>
            <div class="col-md-3">{{ form_row(registrationForm.Prenom) }}</div>
            <div class="col-md-3">{{ form_row(registrationForm.email) }}</div>
        </div>
        <div class="row">
            <div class="col-md-3">{{ form_row(registrationForm.plainPassword, {label: 'Password' }) }}</div>
            <div class="col-md-3">{{ form_row(registrationForm.Photo) }}</div>
            <div class="col-md-3">{{ form_row(registrationForm.agreeTerms) }}</div>
        </div>
        <div class="row">
            <div class="col-md-3"><button type="submit" class="btn btn-success">Ajouter</button></div>
        </div>
    {{ form_end(registrationForm) }}
{% endblock %}

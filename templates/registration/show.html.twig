{% block title %}Historique{% endblock %}

{% block body %}
    <h1>Admin</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ admin.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ admin.Nom }}</td>
            </tr>
             <tr>
                <th>Prenom</th>
                <td>{{ admin.Prenom }}</td>
            </tr>
             <tr>
                <th>Email</th>

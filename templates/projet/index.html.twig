{% extends 'base_admin.html.twig' %}

{% block title %}Projet index{% endblock %}

{% block body %}
    <h1>La liste des projets</h1>
     {% for flash_message in app.session.flashbag.get('success') %}
                <div class="container alert alert-success" role="alert">
                    {{ flash_message }}
                </div>
     {% endfor %}
    <table class="table table-bordered table-hover table-primary">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th> Date d'ajout</th>
                <th>Description</th>
                <th>Date Creation</th>
                <th>Type Projet</th>
                <th>Document</th>
           
            </tr>
        </thead>
        <tbody> 
        {% for projet in projets %}
            <tr>
                <td>{{ projet.id }}</td>
                <td>{{ projet.Nom }}</td>
                <td>{{ projet.DateAjout ? projet.DateAjout|date('Y-m-d') : '' }}</td>
                <td>{{ projet.Description }}</td>
                <td>{{ projet.DateCreation ? projet.DateCreation|date('Y-m-d') }}</td>
                 <td>{{ projet.type.Nom }}</td>
                <td><a href="{{asset('projet_documents/' ~ projet.Document)}}">{{ projet.Document }}</a></td>
                <td>
                    <a href="{{ path('projet_show', {'id': projet.id}) }}" class="btn btn-info"><span class="glyphicon glyphicon-eye-open"></span></a></td>
                <td> <a href="{{ path('projet_edit', {'id': projet.id}) }}" class="btn btn-primary"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">la table est vide</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('projet_new') }}" class="btn btn-success">Ajouter un nouveau</a>
{% endblock %}

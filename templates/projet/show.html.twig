{% extends 'base_admin.html.twig' %}

{% block title %}Projet{% endblock %}

{% block body %}
    <h1>Projet</h1>

    <table class="table table-bordered table-hover table-primary">
        <tbody>
            <tr> 
                <th>Id</th>
                <td>{{ projet.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ projet.Nom }}</td>
            </tr>
            <tr>
                <th>Date d'ajout</th>
                <td>{{ projet.DateAjout ? projet.DateAjout|date('Y-m-d')}}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ projet.Description }}</td>
            </tr>
              <tr>
                <th>Date de creation</th>
                <td>{{ projet.DateCreation ? projet.DateCreation|date('Y-m-d')}}</td>
            </tr>
            <tr>
                <th>Type projet</th>
                <td>{{ projet.type.Nom }}</td>
            </tr>
            <tr>
                <th>Document</th>
                <td><a href="{{asset('projet_documents/' ~ projet.Document)}}">{{ projet.Document }}</a></td>
            </tr>
            <tr>
                <th></th>
                 <td><img src="{{asset('projet_photo/' ~ projet.Photo)}}" width="100px" height="70px;"></td>
            </tr>
            
            
        </tbody>
    </table>

    <a href="{{ path('projet_index') }}"><span class="btn btn-info">Retour</span></a>
     <br>
    <br>
    <a href="{{ path('projet_edit', {'id': projet.id}) }}" class="btn btn-primary"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
     <br>
    <br>
    {{ include('projet/_delete_form.html.twig') }}
{% endblock %}

{% extends 'base_admin.html.twig' %}

{% block title %}Projet{% endblock %}

{% block body %}
    <h1>Projet</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ projet.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ projet.Nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ projet.Description }}</td>
            </tr>
            <tr>
                <th>Type projet</th>
                <td><td>{{ projet.type.Nom }}</td></td>
            </tr>
            <tr>
                <th>Document</th>
                <td><a href="{{asset('projet_documents/' ~ projet.Document)}}">{{ projet.Document }}</a></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('projet_index') }}"><span class="btn btn-info">Retour</span></a>

    <a href="{{ path('projet_edit', {'id': projet.id}) }}" class="btn btn-primary"><span class="btn btn-info">Retour</span></a>

    {{ include('projet/_delete_form.html.twig') }}
{% endblock %}
